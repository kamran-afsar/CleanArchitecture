{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=CleanArchitectureDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Key": "YourSuperSecretKeyHereMakeItLongAndComplex",
    "Issuer": "CleanArchitecture",
    "Audience": "CleanArchitectureApi",
    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "Email": {
    "SendGrid": {
      "ApiKey": "your-sendgrid-api-key",
      "FromEmail": "noreply@yourapp.com",
      "FromName": "Clean Architecture App"
    },
    "ErrorNotification": {
      "Enabled": true,
      "Recipients": [
        "admin1@yourcompany.com",
        "admin2@yourcompany.com"
      ],
      "Subject": "Application Error Alert - {Environment}"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "ReplenishmentPeriod": "00:01:00"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:4200",
      "https://yourfrontend.com"
    ]
  }
}